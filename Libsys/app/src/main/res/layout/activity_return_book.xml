<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/addbk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETURN BOOK"
        android:textAlignment="center"
        android:layout_below="@+id/actionBARReturn"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="#9400d3" />
    <TextView
        android:id="@+id/retbookID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK ID"
        android:textSize="20dp"
        android:layout_below="@+id/actionBARReturn"
        android:layout_marginTop="50dp"
        android:textColor="#9400d3"/>
    <EditText
        android:id="@+id/retbkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionBARReturn"
        android:layout_toRightOf="@+id/retbookID"
        android:hint="Book ID"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:ems="7"/>
    <TextView
        android:id="@+id/retSTDID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDENT ID"
        android:textSize="20dp"
        android:layout_below="@+id/retbookID"
        android:layout_marginTop="40dp"
        android:textColor="#9400d3"/>
    <EditText
        android:id="@+id/retSTD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retbkID"
        android:layout_toRightOf="@+id/retSTDID"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:hint="Student ID"
        android:ems="7"/>
    <Button
        android:id="@+id/retbookSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retSTD"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        android:text="RETURN"
        android:background="#9400d3"
        android:textColor="#ffffff"/>
</RelativeLayout>